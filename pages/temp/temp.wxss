/* pages/temp/temp.wxss */

page {
    height: 100%;
}

.background {
    width: 100%;
    height: 20%;
    background-color: rgb(228, 211, 180);
    box-shadow: 10px 5px 5px grey;
    /* 实现吸顶效果：即不会随着鼠标滑动 */
    position: sticky;
    top: 0;
    z-index: 999;
}

.background image {
    height: 300rpx;
    width: 300rpx;
    margin-top: 5%;
    margin-right: 5%;
    border-radius: 10%;
}

.comments {
    padding: 15rpx;
    border: 1rpx solid #efefef;
    display: flex;
    /* background-color: rgb(181, 219, 235); */
}


.userRoot {
    display: flex;
    margin-top: 10rpx;
}

.userIcon {
    /* width: 400rpx; */
    /* justify-content: center; */
    text-align: center;
    /* border: 1rpx solid #efefef; */
}


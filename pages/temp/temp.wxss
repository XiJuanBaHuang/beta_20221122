    position: relative;
    
}

.userInfo {
    width: 800rpx;
    position: relative;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
    display: flex;
    flex-direction: column;
    /* 纵向上 分散对齐 */
    justify-content: space-around; 
    /* left: 10%; */
    text-align: justify;
}

.userName {
    font-weight: bold;
    display: inline-block;
    box-sizing: border-box;
    justify-content: center;
    font-size: 30rpx;

}

